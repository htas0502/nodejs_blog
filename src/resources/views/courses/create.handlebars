<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="post" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên khóa học">
        </div>
        <div class="form-group">
            <label for="descrition">Mô tả khóa học</label>
            <input type="text" class="form-control" id="descrition" name="descrition" placeholder="Nhập mô tả">
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" id="videoId" name="videoId" placeholder="Nhập VideoID">
        </div>
        <div class="form-group">
            <label for="level">Độ khó</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Nhập độ khó">
        </div>

        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>